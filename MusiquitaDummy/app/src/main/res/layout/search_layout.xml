<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/vistarelativa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/TituloRow"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:maxLines="1"
            android:text="TextView" />

        <TextView
            android:id="@+id/ChannelRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/TituloRow"
            android:layout_alignStart="@id/TituloRow"
            android:text="TextView" />

        <TextView
            android:id="@+id/DateRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ChannelRow"
            android:layout_alignStart="@id/TituloRow"
            android:text="TextView" />

        <ImageView
            android:id="@+id/imageRow"
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/ic_launcher_background" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>